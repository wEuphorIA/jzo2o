<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzo2o.customer.mapper.WorkerCertificationMapper">

    <select id="queryList" resultType="com.jzo2o.customer.model.dto.response.WorkerCertificationAuditResDTO"
            parameterType="com.jzo2o.customer.model.dto.request.WorkerCertificationAuditPageQueryReqDTO">
        select *
        from worker_certification
        <where>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="idCardNo != null">
                and id_card_no like concat('%',#{idCardNo},'%')
            </if>
            <if test="auditStatus != null">
                and audit_status = #{auditStatus}
            </if>
            <if test="certificationStatus != null">
                and certification_status = #{certificationStatus}
            </if>
        </where>
    </select>
</mapper>
